{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016.array.include"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
